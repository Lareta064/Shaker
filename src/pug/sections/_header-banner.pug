	//====== HEADER SLIDER =========
	.header-slider-wrapper
		
		.header-slider.swiper
			.swiper-wrapper
				//======= single slide ========
				.swiper-slide.header-slider-item
					.container
						//======= slide text ========
						a(href="#!").header-slider__title
							p.txt-25 Ищете товар для продаж на wildberries?
							span.arrow-link У нас есть

					//======= slide bg image ========
					.header-slider__image
						picture
							source(srcset="./img/header-slider/s1-mobile.webp", media="(max-width: 767px)")
							source(srcset="./img/header-slider/s1-desktop.webp")
							img(srcset="./img/header-slider/s1-desktop.webp", alt="img")

				//======= single slide ========
				.swiper-slide.header-slider-item
					.container
						//======= slide text ========
						a(href="#!").header-slider__title
							p.txt-25 Ограниченная серия со скидкой
							span.arrow-link Смотреть
							
					//======= slide bg image ========
					.header-slider__image
						picture
							source(srcset="./img/header-slider/s2-mobile.webp", media="(max-width: 767px)")
							source(srcset="./img/header-slider/s2-desktop.webp")
							img(srcset="./img/header-slider/s1-desktop.webp", alt="img")

				//======= single slide ========
				.swiper-slide.header-slider-item
					.container
						//======= slide text ========
						a(href="#!").header-slider__title
							p.txt-25 Почему хороший шейкер не может стоить 60руб?
							span.arrow-link Читать в нашем блоге
							
					//======= slide bg image ========
					.header-slider__image
						picture
							source(srcset="./img/header-slider/s3-mobile.webp", media="(max-width: 767px)")
							source(srcset="./img/header-slider/s3-desktop.webp")
							img(srcset="./img/header-slider/s3-desktop.webp", alt="img")

