//================== CONTACTS ===============
section.contacts#contacts
	.container
		.contacts-content
			.contacts-column
				h2 Ответим на ваши вопросы
				.manager-card.d-flex
					.manager-card__img
						img.lazy(src="./img/manager1.webp", width="150" alt="img")
					.manager-card__info
						p.title-25 Анастасия
						
						.contacts-links
							a(href="tel:+79068660922") +7 906 866 09 22
							a(href="mailto:3@sbottle.ru") 3@sbottle.ru

						//=====social =======
						.social-block
							a(href="#!").icon-tel
								img(src="./img/social/app.png", width="40" height="40" alt="app")
							a(href="#!").icon-viber
								img(src="./img/social/viber.png", width="40" height="40" alt="viber")
							a(href="#!").icon-tg
								img(src="./img/social/tg.png", width="40" height="40" alt="tg")
							a(href="#!").icon-vk
								img(src="./img/social/vk.png", width="40" height="40" alt="vk")
							a(href="#!").icon-inst
								img(src="./img/social/ins.png", width="40" height="40" alt="inst")
							
			
						//===== кругляшок горит зеленым, если есть класс active  у родителя .online-state
						.online-state.d-flex-y.active
							span.online-state__dot
							span.online-state__text Сейчас онлайн
			.contacts-form-wrapper
				h2 Оформим ваш заказ
				
				form.order-form
					.form-item
						input(type="text" placeholder="Ваше имя" name="name")
					.form-item
						input(type="text" placeholder="Ваш телефон" name="phone")
					.form-item
						input(type="text" placeholder="Ваш email" name="email")
					.form-item.form-item--custom
						input#file.inputfile(type="file" multiple)
						label.form-label( for="file") 
							span Добавить ваш логотип
							span.icon-download
								img(src="./img/doc.png", width="12" height="14" alt="icon")
						span
					.form-item
						textarea( name="message" placeholder="Ваш комментарий...")
					.form-notice.d-flex
						span.notice-icon
						p ВНИМАНИЕ! Продаем только оптом, мин. партия: 84 штуки.
					label.form-confirm
						input(type="checkbox" name="user_confirm")
						p Отправляя данные, я даю согласие на обработку персональных данных в соответствии с #[a(href="#!") Политикой конфиденциальности]
					.form-submit
						button.btn(type="submit") Отправить