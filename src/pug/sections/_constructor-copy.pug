						span.btn-slim Клапан
				
					//======== single item =======
					label.model-part.special-label.add.add1(data-target="c_loop")
						input(type="radio" name="model-part")
						span.btn-slim Петля						
					//======== single item =======
					label.model-part.special-label.add.add.add2(data-target="c_caps")
						input(type="radio" name="model-part")
						span.btn-slim Крышка
				
					//======== single item =======
					label.model-part.special-label.add.add4(data-target="c_bottle")
						input(type="radio" name="model-part")
						span.btn-slim Стакан							
					//======== single item =======
					label.model-part.special-label.personal-logo
						input(type="radio" name="model-part")
						button.btn-slim Печать на стакане
				
