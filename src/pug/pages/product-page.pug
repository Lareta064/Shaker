extends ../layouts/layout.pug

block content
	include ../sections/_header.pug
	main.inner-page.inner-page--product
		//======= breadcrumbs =======
		.breadcrumbs
			ul
				li
					a(href="index.html") Главная
				li
					a(href="#!") Шейкер С01
		
		section.product-page
			//========= visible in mobile =====
			button.open-constructor
				span Собрать свой уникальный дизайн шейкера
				svg.svg-plus
					use( href='./img/spriteSvg.svg#svg-plus')
				
			//======== header =======
			h1 Шейкер С01
			
			//======= header banner ======
			.product-page-header.white-bg
				//===== video box ========
				.video-preview-item(data-video-btn="video1")
					//===== play btm =====
					button.play-icon
						svg.svg-play
							use(href="./img/spriteSvg.svg#svg-play")
					.video-poster.img-zoom
						img.lazy(src="./img/product-page/product-poster.webp", alt="poster")
					
				
				//==== price-box =====
				.product-page-header__info
					.product-price.accent-bg.d-flex
						p.price-box от 146 ₽
						p.price-box-text Окончательная цена зависит от размера заказа и логотипа. Уточните у менеджера.
					.product-info-list
						ul
							li Только опт.<br>Минимальная партия от 84 шт.
							li Всегда в наличии
					a(href="#contacts").btn Заказать
		
		include ../sections/_benefits.pug
		include ../sections/_product-parts-sliders.pug
		include ../sections/_print.pug
		include ../sections/_constructor-copy.pug
		
		include ../sections/_review.pug
		include ../sections/_portfolio.pug
		include ../sections/_blog-cards.pug
	include ../sections/_contacts.pug
	include ../sections/_footer.pug
	//===================VIDEO MODAL ==============
	.modal-frame(data-modal="video1")
		.modal-frame__content
			//=======close btn ======
			button.btn-close +
			.video
				iframe(width="100%", height="100%", src="https://www.youtube.com/embed/9YpM5vwYMyU?si=iCuuVvf5FQhhRJll", title="YouTube video player", frameborder="0", allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share", referrerpolicy="strict-origin-when-cross-origin", allowfullscreen)

block variables
	-var title = "Shaker";